<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    xmlns:tools="http://schemas.android.com/tools"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

    <android.support.constraint.ConstraintLayout
            android:id="@+id/root"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <ImageView
                android:layout_width="match_parent"
                android:layout_height="3dp" android:id="@+id/imageViewLineSeperator"
                tools:layout_editor_absoluteX="0dp" android:background="#d9d4d7"
                app:layout_constraintBottom_toBottomOf="parent"/>
        <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textViewPlateCode"
                app:layout_constraintTop_toBottomOf="@+id/imgLogo" android:layout_marginStart="269dp"
                app:layout_constraintStart_toEndOf="@+id/textViewCityName" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="10dp" android:layout_marginTop="10dp" android:paddingRight="5dp"
                android:textStyle="bold"/>
        <ImageView
                android:id="@+id/imgLogo"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginBottom="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"/>
        <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textViewCityName"
                app:layout_constraintTop_toBottomOf="@+id/imgLogo" app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@+id/imgLogo"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="336dp"
                android:layout_marginBottom="10dp" android:layout_marginTop="10dp" android:paddingLeft="15dp"
                android:textStyle="bold"/>

    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>